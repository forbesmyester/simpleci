#!/bin/bash

# Required Configuration values
# -----------------------------

SIMPLECI_METHOD=github
SIMPLECI_CONFIG_REPOS="nwq nwq-example-application"
SIMPLECI_CONFIG_USER=forbesmyester

SIMPLECI_CONFIG_LOG_DIR="$PWD/store/log"
SIMPLECI_CONFIG_BUILD_DIR="/tmp/store/build"
SIMPLECI_CONFIG_STATE_DIR="$PWD/store/state"
SIMPLECI_CONFIG_CONFIG_DIR="$PWD/store/config"

SIMPLECI_METHOD="${SIMPLECI_METHOD}" SIMPLECI_CONFIG_REPOS="${SIMPLECI_CONFIG_REPOS}" SIMPLECI_CONFIG_USER="${SIMPLECI_CONFIG_USER}" SIMPLECI_CONFIG_LOG_DIR="${SIMPLECI_CONFIG_LOG_DIR}" SIMPLECI_CONFIG_BUILD_DIR="${SIMPLECI_CONFIG_BUILD_DIR}" SIMPLECI_CONFIG_STATE_DIR="${SIMPLECI_CONFIG_STATE_DIR}" SIMPLECI_CONFIG_CONFIG_DIR="${SIMPLECI_CONFIG_CONFIG_DIR}" ./${SIMPLECI_METHOD}-process
